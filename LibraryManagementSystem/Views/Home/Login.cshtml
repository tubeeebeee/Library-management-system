@model LibraryManagementSystem.Models.AdminSystem

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<style>
    .test {
        box-shadow: -1px 4px 22px 10px white;
    }
    body{
        background-color:aliceblue;
    }
</style>


@using (Html.BeginForm("Login", "Home", new { returnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post))
{
    @Html.AntiForgeryToken()


<div class="container test" style="max-width:400px;margin-top:5%;background-color:burlywood;">
    <div style="background-color:cadetblue;padding:20px;" class="row">
        <h2 style="font-size:40px;color:white" class="text-center text-info">Admin Login</h2>
        

    </div>
    @if (ViewBag.error != null)
    {
        <p class="text-center text-danger">@ViewBag.error</p>
    }
    <div class="row">
        <div class="form-group" style="padding:10px;">
            <label>User name :</label>

            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control",@placeholder="Enter user" } })
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

        </div>
    </div>
    <div class="row">
        <div class="form-group" style="padding:10px;">
            <label>Password :</label>

            @Html.EditorFor(model => model.UserPassword, new { htmlAttributes = new { @class = "form-control", @type = "password", @placeholder = "Enter password" } })
            @Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "text-danger" })

        </div>
        <hr />
    </div>
    
    <div class="row" style="margin-left:35%;padding:10px;">
        <input id="btnClick" type="submit" value="Login" class="btn btn-primary btn-lg" />
    </div>
</div>
}

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    $(document).ready(function () {
       
        $("#btnClick").click(function () {
            
        })
    })
</script>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
